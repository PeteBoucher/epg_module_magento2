<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
  <!--
  <head>
    <action method="addItem">
      <type>skin_js</type>
      <name>easypaymentgateway/js/epg-front.js</name>
      <params/>
    </action>
    <action method="addItem">
      <type>skin_css</type>
      <name>easypaymentgateway/css/epg-front.css</name>
      <params/>
    </action>
  </head>
